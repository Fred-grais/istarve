<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.utt.if26.istarve.views.restaurant_views.RestaurantRatingFragment">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ma Note"
            android:id="@+id/note_text"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_rating_bar"
            android:layout_toEndOf="@+id/restaurant_address"
            android:isIndicator="false"
            android:clickable="true"
            android:focusable="true"
            android:stepSize="1"
            android:layout_below="@+id/note_text"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/comment_title"
            android:layout_below="@+id/comment_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/comment_body"
            android:layout_below="@+id/comment_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer"
            android:id="@+id/submit_comment"
            android:layout_below="@+id/comment_body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mon commentaire"
            android:id="@+id/comment_label"
            android:layout_below="@+id/my_rating_bar"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>
