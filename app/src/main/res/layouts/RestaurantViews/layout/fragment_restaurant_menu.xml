<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <Button
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_menu_profile_button_text"
        android:id="@+id/button_show_restaurant"
        android:layout_weight="0.33" />

    <Button
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_menu_rating_button_text"
        android:id="@+id/button_rate_restaurant"
        android:layout_weight="0.33" />

    <Button
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_menu_pictures_button_text"
        android:id="@+id/button_pictures_restaurant"
        android:layout_weight="0.33" />


</LinearLayout>
